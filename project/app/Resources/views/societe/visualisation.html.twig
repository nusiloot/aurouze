{% set _menu_active = 'societe' %}
{% extends 'base.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col-xs-12">
            <h3><i class="mdi mdi-{{ societe.icon }} mdi-lg" title="{{ societe.typeLibelle }}"></i> {{  societe.raisonSociale }} <small class="muted">{{ societe.codeComptable }}</small> <a class="btn btn-sm btn-warning pull-right" href="{{ path('societe_modification', {'id': societe.id}) }}"><strong><span aria-hidden="true" class="glyphicon glyphicon-pencil"></span>&nbsp;Modifier</strong></a></h3>
            <div class="panel panel-default">
			    <div class="panel-heading">Informations</div>
			    <div class="panel-body">
			        <div class="rows">
			            <div class="col-xs-6">
			            <strong>Adresse: </strong><br /><br />
						{{ societe.adresse.adresse }} <br />
						{{ societe.adresse.codePostal }} {{ societe.adresse.commune }} 
			            </div>
			            <div class="col-xs-6">
			            <strong>Commentaire: </strong><br /><br />
			            {{ societe.commentaire }} 
			            </div>
			        </div>
			    </div>
			</div>
        </div>
    </div>
	<h3>Etablissements ({{ societe.etablissements|length }}) <a class="btn btn-sm btn-warning pull-right" href="{{ path('etablissement_modification', {'societe': societe.id}) }}"><strong><span aria-hidden="true" class="glyphicon glyphicon-plus"></span>&nbsp;Ajouter</strong></a></h3>
    <div class="row">
    	{% for etablissement in societe.etablissements %}
        <div class="col-xs-3">
            <div class="panel panel-default">
			    <div class="panel-heading"><i class="mdi mdi-{{ etablissement.icon }} mdi-lg"></i> {{ etablissement.raisonSociale }} <small>{{ etablissement.nom }}</small> <a class="btn btn-xs btn-warning pull-right" href="{{ path('etablissement_modification', {'societe': societe.id, 'id': etablissement.id }) }}"><strong><span aria-hidden="true" class="glyphicon glyphicon-pencil"></span></strong></a></div>
			    <div class="panel-body">
			        <div class="rows">
						{{ etablissement.adresse.adresse }} <br />
						{{ etablissement.adresse.codePostal }} {{ etablissement.adresse.commune }} 
			        </div>
			    </div>
			</div>
        </div>
        {% endfor %}
    </div>
{% endblock %}