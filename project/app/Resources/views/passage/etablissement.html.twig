{% set _menu_active = 'passage' %}
{% extends 'base.html.twig' %}
{% block body %}

    {{ include('etablissement/choixForm.html.twig', {'form': formEtablissement}) }}

    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-5">
                            <strong>{{ etablissement.nom }}</strong>
                        </div>
                        <div class="col-xs-6">
                            Société {{ etablissement.raisonsociale }}&nbsp;
                        </div>
                        <div class="col-xs-1">
                            <span class="glyphicon glyphicon-question-sign" data-toggle="tooltip" style="cursor: default;" data-original-title="{{ etablissement.commentaire }}"></span>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-10">
                            {{ etablissement.adresse.intitule }}
                        </div>
                        <div class="col-xs-2">
                            <i style="cursor: default;" class="pull-right mdi mdi-{{ etablissement.icon }} mdi-4x" title="{{ etablissement.type }}" data-toggle="tooltip" ></i>

                        </div>
                    </div>
                    {%if ((not etablissement.telephonefixe is null) and (not etablissement.telephoneportable is null)) %}
                        <div class="row">
                            <div class="col-xs-6">
                                Tél fixe : {{ etablissement.telephonefixe }}
                            </div>
                            <div class="col-xs-6">
                                Tél portable : {{ etablissement.telephoneportable }}
                            </div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="well well-sm">
                                <div class="row">
                                    <div class="col-xs-10">
                                        <small>{{ etablissement.commentaire }}</small>
                                    </div>
                                    <div class="col-xs-2">
                                        <a class="btn btn-xs btn-warning pull-right" href="{{ path('etablissement_modification', {'societe': etablissement.getSociete().getId(),'id': etablissement.getId()}) }}">Modifier</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <div id="map" style="width: 100%; height: 148px;" data-geojson="{{ geojson | json_encode(constant('JSON_HEX_QUOT')) }}"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <a href="{{ path('contrat_creation_etablissement', {'id': etablissement.getId()}) }}" class="btn btn-sm btn-warning"><strong><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Créer un nouveau contrat</strong></a>
            <a href="{{ path('passage_creation', {'id': etablissement.getId()}) }}" class="btn btn-sm btn-warning"><strong><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Créer un passage</strong></a>
            <hr />
            {% for contrat in contrats %}
                {% set passagesEtablissement = contrat.getPassagesEtablissementNode(etablissement) %}

                {% if(passagesEtablissement is not null) %}
                    <div id="contrat-{{ contrat.id }}" class="panel {% if(not contrat.isResilie) %} {% if(not contrat.isTerminee) %}panel-default{% else %}panel-success{% endif %} {% else %}panel-danger{% endif %}">
                        <div data-toggle="collapse" data-parent="contrat-{{ contrat.id }}" href="#contrat-{{ contrat.id }}-passages" aria-controls="contrat-{{ contrat.id }}-passages" class="panel-heading">
                            <h3 class="panel-title">

                                {% if(not contrat.isTerminee) %}Contrat en cours jusqu'au {{ contrat.dateFin | localizeddate("medium", "none", null, null, "d MMMM YYYY") }}{% else %}Contrat terminé en {{ contrat.dateFin | localizeddate("medium", "none", null, null, "MMMM YYYY") | capitalize }}{% endif %}

                                <small>Contrat  n° {{ contrat.numeroArchive }}
                                    sur {{ contrat.duree }} mois</small>&nbsp;
                                    {% if(contrat.isResilie) %}
                                    <span>Résilié le {{ contrat.dateResiliation | localizeddate("medium", "none", null, null, "d MMMM YYYY") }}</span>
                                {% endif %}
                                <span class="pull-right">{{ passagesEtablissement.nbPassagePrevu}} passages prévus</span>
                            </h3>
                        </div>
                        <div id="contrat-{{ contrat.id }}-passages" class="collapse {% if(contrat.isTerminee) %}out{% else%}in{% endif %} list-group ">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-11">
                                        <div class="well well-sm"><small>{{ contrat.nomenclature | nl2br }}</small></div>
                                    </div>
                                    <div class="col-xs-1">
                                        <a class="btn btn-default btn-xs pull-right" href="{{ path('contrat_visualisation', { 'id': contrat.id }) }}">Voir</a>
                                    </div>
                                </div>
                            </div>
                            {% for pe in passagesEtablissement.getPassagesSorted %}
                                <div class="list-group-item {% if(pe.annule or pe.realise) %}small{% endif %}">
                                    <div class="row">
                                        <div class="col-xs-1">

                                            {% if(pe.enAttente) %}
                                                <label class="btn btn-xs btn-block btn-default">{{ pe.getStatutLibelle() }}</label>
                                            {% elseif(pe.aPlanifie) %}
                                                <label class="btn btn-xs btn-block btn-primary">{{ pe.getStatutLibelle() }}</label>
                                            {% elseif(pe.planifie) %}
                                                <label class="btn btn-xs btn-block btn-warning">{{ pe.getStatutLibelle() }}</label>
                                            {% elseif(pe.annule) %}
                                                <label class="btn btn-xs btn-block btn-danger">{{ pe.getStatutLibelle() }}</label>

                                            {% elseif(pe.realise) %}
                                                <label class="btn btn-xs btn-block btn-success">{{ pe.getStatutLibelle() }}</label>
                                            {% endif %}
                                        </div>
                                        <div class="col-xs-3">
                                            {% if(pe.enAttente) %}
                                                {{ pe.datePrevision | localizeddate("medium", "none", null, null, "MMMM YYYY") | capitalize }}
                                            {% elseif(pe.APlanifie) %}
                                                {{ pe.dateDebut | localizeddate("medium", "none", null, null, "MMMM YYYY") | capitalize }}
                                            {% else %}{{ pe.dateDebut | localizeddate('full', 'none') | capitalize }}{% endif %}
                                            {#                                            {% if(not pe.isAPlanifie) %} à {{ pe.dateDebut | localizeddate('none', 'short') }}{% endif %}#}
                                        </div>
                                        <div class="col-xs-2">
                                            {% for prestation in pe.prestations %}
                                                {% if(prestation.wordToPicto) %}
                                                    <span class="step size-24" title="{{  prestation.nomToString }}" data-toggle="tooltip" >
                                                        <i id="icon-{{prestation.wordToPicto}}" class="icon-{{prestation.wordToPicto}}" style="cursor: pointer;" >&nbsp;</i></span>
                                                    {%else%}
                                                    <span class="label label-xs label-primary">{{  prestation.nomToString }}</span>
                                                {%endif%}
                                            {% endfor %}
                                        </div>
                                        <div class="col-xs-2">
                                            {% if(pe.duree) %}<span><i class="mdi mdi-schedule mdi-lg"></i>&nbsp;{{ pe.duree }}</span>{% endif %}
                                        </div>
                                        <div class="col-xs-2">
                                            <ul class="list-inline list-unstyled">
                                                {% for technicien in pe.techniciens %}
                                                    <li>
                                                        <i class="mdi mdi-face mdi-lg"></i>&nbsp;{{ technicien.identite }}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                        <div class="col-xs-2 text-right">
                                            {% if pe.planifie  %}<div class="btn-group">
                                                    <a class="btn btn-sm btn-default" href="{{ path('passage_pdf_bon', { id: pe.id })}}"><span class="glyphicon glyphicon-print"></span></a>
                                                    <a class="btn btn-sm btn-warning" href="{{ path('passage_edition', { id: pe.id })}}">Saisir le rapport</a>
                                                </div>
                                            {% elseif pe.realise %}<a class="btn btn-block btn-sm btn-default" href="{{ path('passage_edition', { id: pe.id })}}">Modifier le rapport</a>
                                            {% elseif pe.aPlanifie %}
                                                {% for technicien in pe.techniciens %}
                                                    <a class="btn btn-sm btn-block btn-primary" href="{{path('calendar', {'passage' : pe.passageIdentifiant,'technicien' : technicien.identite, 'calendrier' : pe.datedebut|date('d-m-Y')})}}">Planifier</a>
                                                {% endfor %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

{% endblock %}
