{% set _menu_active = 'societe' %}
{% extends 'base.html.twig' %}
{% block body %}


    <div class="row">
		<div class="col-xs-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">
						<div class="title">{{  societe.raisonSociale }} <small class="muted">{{ societe.codeComptable }}</small></div>
					</div>
					<div class="pull-right card-action">
						<a class="btn btn-sm btn-default" href="{{ path('societe_visualisation', {'id': societe.id}) }}"><strong><span aria-hidden="true" class="fa fa-mail-reply"></span>&nbsp;Retour</strong></a>
					</div>
				</div>
			</div>
			
	
			<div class="page-title">
				<span class="title">Nouvel établissement</span>
				<div class="description">Données relatives aux éléments de passage.</div>
			</div>
		</div>
	</div>
	
   {{ form_start(form) }}
   <div class="row">
		<div class="col-xs-12">
			
			<div class="card">
				<div class="card-header">
					<div class="card-title"><div class="title">Informations</div></div>
				</div>
				<div class="card-body">
					<div class="form-group">
	                        {{ form_row(form.raisonSociale) }}
	                 </div>
	                 <div class="form-group">
	                        {{ form_row(form.nom) }}
	                 </div>
	                 <div class="form-group">
	                        {{ form_row(form.type) }}
	                 </div>
				</div>
			</div>
			
		</div>
	</div>
	
	<div class="row">
		<div class="col-xs-12">
		
			<div class="card">
				<div class="card-header">
					<div class="card-title"><div class="title">Adresse</div></div>
				</div>
				<div class="card-body">
					<div class="form-group">
	                        {{ form_row(form.adresse.adresse) }}
	                 </div>
	                 <div class="form-group">
	                        {{ form_row(form.adresse.codePostal) }}
	                 </div>
	                 <div class="form-group">
	                        {{ form_row(form.adresse.commune) }}
	                </div>
				</div>
			</div>
			
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
		
			<div class="card">
				<div class="card-header">
					<div class="card-title"><div class="title">Contact</div></div>
				</div>
				<div class="card-body">
					<div class="form-group">
	                        {{ form_row(form.contactCoordonnee.telephoneFixe) }}
	                 </div>
	                 <div class="form-group">
	                        {{ form_row(form.contactCoordonnee.telephoneMobile) }}
	                 </div>
	                 <div class="form-group">
	                        {{ form_row(form.contactCoordonnee.fax) }}
	                 </div>
	                 <div class="form-group">
	                        {{ form_row(form.contactCoordonnee.email) }}
	                 </div>
	                 <div class="form-group">
	                        {{ form_row(form.contactCoordonnee.siteInternet) }}
	                </div>
				</div>
			</div>
			
		</div>
	</div>    
            <div class="row">
        		<div class="col-xs-12">
            		{{ form_widget(form.save) }}
            	</div>
            </div>
        {{ form_end(form) }}
{% endblock %}